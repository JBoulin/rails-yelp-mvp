<div class="container mb-3 mt-3 p-3 bg-light rounded">
  <!-- app/views/reviews/new.html.erb -->
<h1 class="mb-4">New Review for <%= @restaurant.name %></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <div class="mb-3">
    <%= f.input :content, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= f.input :rating, as: :select, collection: 0..5, label_html: { class: 'form-label' }, input_html: { class: 'form-select' } %>
  </div>
  <%= f.button :submit, 'Submit Review', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Restaurant', @restaurant, class: 'btn btn-secondary mt-3' %>

</div>
